<html>
  <head>
<style>
  .admin {
    display: none
  }
@import url('https://fonts.googleapis.com/css2?family=Open+Sans&display=swap');
</style>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">


<nav class="navbar navbar-expand-lg navbar-dark bg-dark px-3">
        <a class="navbar-brand" href="/">FreelanceHire</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" href="javascript:;" onclick="hireNow()">Search Freelancers</a>
            </li>
               <li class="nav-item">
              <a class="nav-link" href="/user/profile/" id="account">Account</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="javascript:;" onclick="register()">Register</a>
            </li>
            <li class="nav-item admin">
              <a class="nav-link" href="javascript:;" onclick="addFrelancer()">Add freelancer</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/user/login">Log in</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="javascript:;" onclick="logout()">Log out</a>
            </li>
          </ul>
        </div>
      </nav>

  </head>

    <title>{{title}}</title>
    

  <body >
    {{{body}}}
  </body>

</html>







<script>

   let isAdmin = localStorage.getItem('isAdmin'); 

    let url2 = '/user/profile/' + localStorage.getItem('userId');
    document.getElementById("account").setAttribute('href', url2);

    if(isAdmin && isAdmin != "false") {
      let elements = document.getElementsByClassName('admin');
      for(let i = 0; i < elements.length; i++) {
        elements[i].classList.remove("admin");
      }
    }

    function logout() {
        localStorage.setItem('token', '');
        localStorage.setItem('userId', '');
        localStorage.setItem('isAdmin', '');
        window.location.href = "/user/login";
    }

    function addFrelancer() {
       window.location.href = "/addfreelancer";
    }

    function hireNow() {
        let token = localStorage.getItem('token'); 
       
        if (token) {
             window.location.href = "/hirenow?token="+token;
        }else {
            alert("Authorization Denied, please Log In!")
        }

    }

        function register() {
             window.location.href = "/user/registration";
        }
        
</script>

</html>
